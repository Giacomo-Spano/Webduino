<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <TextView
        android:text="Scegliere i giorni della settimana in cui il programma sarà attivo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titleTextView"
        android:textSize="18sp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="0dp">

        <CheckBox
            android:text="Lunedì"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/monCheckBox"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />
        <CheckBox
            android:text="Martedì"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/tueCheckBox"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />
        <CheckBox
            android:text="Mercoledì"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/wedCheckBox"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />
        <CheckBox
            android:text="Giovedì"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/thuCheckBox"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />
        <CheckBox
            android:text="Venerdì"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/friCheckBox"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />

        <CheckBox
            android:text="Sabato"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/satCheckBox"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />

        <CheckBox
            android:text="Domenica"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/sunCheckBox"
            android:layout_weight="1"
            android:layout_marginTop="10dp" />
    </LinearLayout>
</RelativeLayout>